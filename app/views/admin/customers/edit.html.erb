<div class="container">
 <h4 style="margin-top:30px;"><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h4>
   <%= form_with model: @customer, url: admin_customer_path(@customer.id), class: "w-100" do |f| %>
 <table>
   <tr>
     <td>会員ID</td>
     <td class= "col-sm-8"><%= @customer.id %></td>
   </tr>
   <tr>
     <td>氏名</td>
     <td><%= f.text_field :first_name %> <%= f.text_field :last_name %></td>
   </tr>
   <tr>
     <td>フリガナ</td>
     <td><%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %></td>
   </tr>
   <tr>
     <td>郵便番号</td>
     <td><%= f.text_field :postal_code %></td>
   </tr>
   <tr>
     <td>住所</td>
     <td><%= f.text_field :address %></td>
   </tr>
   <tr>
     <td>電話番号</td>
     <td><%= f.text_field :phone_number %></td>
   </tr>
   <tr>
     <td>メールアドレス</td>
     <td><%= f.text_field :email %></td>
   </tr>
   <tr>
     <td>会員ステータス</td>
     <td>
        <%= f.radio_button :is_deleted, :false, class:"col-sm-1" %>
        <%= f.label :is_deleted, "有効", value: false %>
        <%= f.radio_button :is_deleted, :true, class:"col-sm-1"%>
        <%= f.label :is_deleted, "退会", value: true %>
     </td>
    </tr>
 </table>
     <%= f.submit "変更を保存" , class:"btn btn-success btn-sm", style:"margin-left:200px"%>
 <% end %>
</div>
