<div class="container">
 <h4 style="margin-top:30px;">商品一覧</h4>
 <div class="text-right">
 　　<%= link_to "新商品登録", new_admin_item_path, class: "btn btn-success btn-sm", style:"margin-bottom:10px" %>
 </div>
    <table class="table">
     <thred>
       <tr class="table-active">
             <th>商品ID</th>
             <th>商品名</th>
             <th>税抜価格</th>
             <th>ジャンル</th>
             <th>ステータス</th>
        </tr>
      </thred>
     
        <tbody>
          <% @items.each do |item| %>
          <tr>
             <td><%= item.id %></td>
             <td>
             <%= link_to edit_admin_item_path(item.id) do %>
             <%= item.name %>
             <% end %>
             </td>
             <td><%= item.price %></td>
             <td><%= item.genre.name %></td>
             <% if item.is_active==true %>
             <td class="text-success">販売中</td>
             <% else %>
             <td>販売停止中</td>
             <% end %>
           </tr>
           <% end %>
        </tbody>
       <%= paginate @items %>
    </table>
 </div>