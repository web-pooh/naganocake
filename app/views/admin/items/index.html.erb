<div class="admin_items_index">



<h2>商品一覧</h2>

<%= link_to "新規商品を登録", new_admin_item_path %>
<!--仮ボタン-->

   <table class="table table-items">
        <thred>
           <tr>
             <th>商品ID</th>
             <th>商品名</th>
             <th>税抜価格</th>
             <th>ジャンル</th>
             <th>ステータス</th>
        　</tr>
        </thred>

        <tbody>
          <% @items.each do |item| %>
          <tr>
             <td><%= item.id %></td>
             <td>
             <%= link_to edit_admin_item_path(item.id) do %>
             <%= item.name %>
             <% end %>
             </td>
             <td><%= item.price %></td>
             <td><%= item.genre.name %></td>
             <td><%= item.is_active %></td>
           </tr>
           <% end %>
        </tbody>
       <%= paginate @items %>
    </table>
 </div>