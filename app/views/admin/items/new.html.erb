<div class="admins-items-new">
    
    <h1>商品新規登録</h1>
         <%= form_with model:@item, url:admin_items_path do |f| %>
      <label for="item-image">商品画像</label>
         <%= f.file_field :image, accept: "image/*" %><br>
      <label for="items-name">商品名</label>
         <%= f.text_field :name %><br>
      <label for="items-description">商品説明</label>
         <%= f.text_field :description %><br>
      <label for="itemes-genre"></label>ジャンル</label>
         <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください" %><br>
      <label for="items-price">税抜価格</label>
         <%= f.text_field :price %><br>
      <label for="items-is_active">販売ステータス</label>
         <%= f.radio_button :is_active, true %>
         <%= f.label :is_active, "販売中" %>
         <%= f.radio_button :is_active, false %>
         <%= f.label :is_active, "売切れ" %><br>
      <%= f.submit "新規登録" %> 
      <% end %>
</div>