<div class="admin-item-show">
	<h4><%= flash[:notice] %></h4>
	<h4 style="margin-top:30px;">商品詳細</h4>
　　<div class="col">
	  <%= image_tag @item.image, size: "200x200", class:"float-left" %>
	</div>
       <div class="d-flex">
		<table class="table table-borderless">
			<tr>
				<th class= "col-sm-3" %>商品名</th>
				<td><%= @item.name %></td>
			</tr>
			<tr>
				<th>商品説明</th>
				<td><%= @item.description %></td>
			</tr>
			<tr>
				<th>ジャンル</th>
				<td><%= @item.genre.name %></td>
			</tr>
			<tr>
				<th>税込価格（税抜価格）</th>
			   <td><%= (@item.price* 1.1).to_i %> (<%= @item.price %>)円</td>
			</tr>
			<tr>
				<th>販売ステータス</th>
				<td><%= @item.is_active %></td>
			</tr>
		</table>
	  </div>
	   <div class="text-right">
		<%= link_to ' 編集する', edit_admin_item_path(@item), class:"btn btn-success", style:"margin-right:400px;"%>
	   </div>
</div>