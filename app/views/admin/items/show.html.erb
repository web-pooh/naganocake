<div class="admin-item-show">
	<h2>商品詳細</h2>
	  <%= image_tag @item.image %>
	</div>
		<table class="table table-admin-item">
			<tr>
				<th>商品名</th>
				<td><%= @item.name %></td>
			</tr>
			<tr>
				<th>商品説明</th>
				<td><%= @item.description %></td>
			</tr>
			<tr>
				<th>ジャンル</th>
				<td><%= @item.genre.name %></td>
			</tr>
			<tr>
				<th>税込価格（税抜価格）</th>
			   <td><%= @item.price %>(<%#= (@item.price * 1.1).floor(:delimited) %>)円</td>
			</tr>
			<tr>
				<th>販売ステータス</th>
				<td><%= @item.is_active %></td>
			</tr>
		</table>
		
		<%= link_to ' 編集する', edit_admin_item_path(@item) %>
</div>