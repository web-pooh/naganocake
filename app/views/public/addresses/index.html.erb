<div class="addess_index">
    <h1>配送先登録/一覧</h1>
     <%= form_for @address do |f| %>
       <label for="addresse_postal_code">郵便番号(ハイフンなし)</label>
         <%= f.text_field :postel_code %><br>
       <label for="addresse_addresse">住所</label>
         <%= f.text_field :address %><br>
       <label for="addresse_receiver_name">宛名</label>
         <%= f.text_field :receiver_name %><br>
     <%= f.submit "新規登録", class: "btn btn-new-registration" %>
     <% end %>
     
   <table class="table table-customers">
        <thred>
           <tr>
             <th>郵便番号</th>
             <th>住所</th>
             <th>宛名</th>
             <th></th>
             <th></th>
        　</tr>
        </thred>
       
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
             <td><%= address.postel_code %></td>
             <td><%= address.address %></td>
             <td><%= address.receiver_name %></td>
             <td><%= link_to"編集する", edit_address_path(address.id), class: "btn btn-edit" %></td>
             <td><%= link_to"削除する", address_path(address.id), class: "btn btn-delete", method: :delete %></td>
           </tr>
           <% end %>
        </tbody>
    </table>
 </div>