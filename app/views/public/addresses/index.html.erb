<div class="row"> 
<h4><%= flash[:notice] %></h4>
 <div class = "container">
    <h4 style = "margin-top:30px;">配送先登録/一覧</h4>
     <%= form_for @address do |f| %>
     <div class="form-group row", style = "margin-top:30px;">
       <label for="<addresse_postal_code", class="col-sm-3">郵便番号(ハイフンなし)</label>
         <%= f.text_field :postel_code, class:"col-sm-3"%><br>
     </div>
     <div class="form-group row"> 
       <label for="addresse_addresse", class="col-sm-3">住所</label>
         <%= f.text_field :address, class:"col-sm-7" %><br>
     </div>
     <div class="form-group row">
       <label for="addresse_receiver_name", class="col-sm-3">宛名</label>
         <%= f.text_field :receiver_name, class:"col-sm-3" %> <%= f.submit "新規登録", class: "btn btn-success rounded float-rightstyle", style:"margin-left:50px;" %>
     </div>
     <% end %>
     
   <table class="table table-bordered">
        <thred>
           <tr class="table-active">
             <th>郵便番号</th>
             <th>住所</th>
             <th>宛名</th>
             <th></th>
             <th></th>
        　</tr>
        </thred>
       
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
             <td class="align-middle"><%= address.postel_code %></td>
             <td class="align-middle"><%= address.address %></td>
             <td class="align-middle"><%= address.receiver_name %></td>
             <td><%= link_to"編集する", edit_address_path(address.id), class: "btn btn-success btn-sm" %></td>
             <td><%= link_to"削除する", address_path(address.id), class: "btn btn-danger btn-sm" , method: :delete %></td>
           </tr>
           <% end %>
        </tbody>
    </table>
 </div>