<div class="row">
    <div class="col-md-12">
      <div>
        <strong class="information-link"><h3>ショッピングカート</h3></strong>
        <%= link_to "カートを空にする", all_path, method: :DELETE, class: "pull-right btn btn-danger" %>
      </div>
        <table class="table table-hover table-bordered col-md-12" >
         <thead>
          <tr class="info">
            <th class="col-md-2">商品名</th>
            <th class="col-md-2">単価（税込み）</th>
            <th class="col-md-2">数量</th>
            <th class="col-md-1">小計</th>
            <th class="col-md-1"></th>
          </tr>
         </thead>
         <tbody>
          <% @carts.each do |cart| %>
          <tr>
            <td class="col-md-3"> <%= image_tag cart.item.image, size: "40x40" %><%= cart.item.name %></td>
            <td class="col-md-2">¥<%= ((cart.item.price * 1.1).floor).to_s(:delimited, delimiter: ',') %></td>
            <td class="col-md-1">
                <%= form_with model: cart, url: cart_path(cart) do |f| %>
                <p>
                  <%= f.number_field :count, min:1, max:10000, step:1 %>
                  <%= f.submit "変更", class: "btn btn-primary" %>
                </p>
                <% end %>
            </td>
            <td class="col-md-1">
                ¥<%= ((cart.item.price * cart.count * 1.1).floor).to_s(:delimited, delimiter: ',') %>
            </td>
            <td class="col-md-1">
                <%= link_to "削除する", cart_path(cart), method: :DELETE, class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
         </tbody>
        </table>
    </div>
</div>

<div class="row">
<div class="col-md-12">
    <span>
    <%= link_to "買い物を続ける", items_path, class: "btn btn-primary", data: {"turbolinks" => false} %>
    </span>
</div>
<div class="col-md-12">
    <table class="table table-bordered">
        <tr>
            <td class="info col-md-4"><strong>合計金額</strong></td>
            <td class="col-md-8">¥<%= @total_price.floor.to_s(:delimited, delimiter: ',') %></td>
        </tr>
    </table>
</div>
</div>

<div class="row">
<div class = "col-md-4 col-md-offset-4">
    <span>
        <%= link_to "情報入力に進む", new_order_path, class: "col-xs-12 btn btn-success"%>
    </span>
    </div>
</div>
</div>