<div class="row"> 
 <div class = "container">
    <h4 style = "margin-top:30px;">会員情報編集</h4>
    <%= form_for @customer,url: customers_path do |f| %>
   　<div class="form-group row">
      <label for="customer-name"  class="col-sm-2">氏名</label>
         <%= f.text_field :first_name, style: "margin-right: 10px;"%>
         <%= f.text_field :last_name %>
    </div>
    <div class="form-group row">
      <label for="customer-name-kana" class="col-sm-2">カナ</label>
         <%= f.text_field :first_name_kana, style: "margin-right: 10px;"%>
         <%= f.text_field :last_name_kana %>
    </div>
    <div class="form-group row">
      <label for="customer-postal_code" class="col-sm-2">郵便番号</label>
         <%= f.text_field :postal_code %>
    </div>
    <div class="form-group row">
      <label for="customer-addresse"  class="col-sm-2">住所</label>
         <%= f.text_field :address %>
     </div>
    <div class="form-group row">
      <label for="customer-phone_numbere" class="col-sm-2">電話番号</label>
         <%= f.text_field :phone_number %>
    </div>
    <div class="form-group row">
      <label for="customer-postal_code" class="col-sm-2">メールアドレス</label>
         <%= f.text_field :email %>
    </div>
      <%= f.submit "編集内容を保存する", class: "btn btn-success col-sm-2", style:"margin-left:200" %>  <%= link_to "退会する", customers_bye_path, class: "btn btn-danger col-sm-2"%>
     
      <% end %>
 </div>
</div>