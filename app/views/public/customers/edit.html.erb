<div class="customer-edit">
    
    <h1>会員情報編集</h1>
    <%= form_for @customer,url: customers_update_path do |f| %>
      <label for="customer-name">氏名</label>
         <%= f.text_field :first_name %>
         <%= f.text_field :last_name %><br>
      <label for="customer-name-kana">カナ</label>
         <%= f.text_field :first_name_kana %>
         <%= f.text_field :last_name_kana %><br>
      <label for="customer-postal_code">郵便番号</label>
         <%= f.text_field :postal_code %><br>
      <label for="customer-addresse">住所</label>
         <%= f.text_field :addresse %><br>
      <label for="customer-phone_numbere">電話番号</label>
         <%= f.text_field :phone_numbere %><br>
      <label for="customer-postal_code">メールアドレス</label>
         <%= f.text_field :email %><br>
      <%= f.submit "編集内容を保存する" %>  <%= link_to "退会する", customers_bye_path %>
      <% end %>
</div>