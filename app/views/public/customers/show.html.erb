<div class="customer_show">
    <h1>マイページ</h1>
    <h2>登録情報</h2>
     <%= link_to "編集する", customers_edit_path(@customer) %>
     <table class="table table-customers">
       <thred>
           <tr>
               <th>氏名</th>
               <td><%= @customer.first_name %><%= @customer.last_name %></td>
           </tr>
           <tr>
               <th>カナ</th>
               <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
           </tr>
           <tr>
               <th>郵便番号</th>
               <td><%= @customer.postal_code %></td>
           </tr>
           <tr>
               <th>住所</th>
               <td><%= @customer.address %></td>
           </tr>
           <tr>
               <th>電話番号</th>
               <td><%= @customer.phone_number %></td>
           </tr>
               <th>メールアドレス</th>
               <td><%= @customer.email %></td>
           </tr>
      </thred>
     </table>
     
  <h2>配送先</h2>
     <%= link_to "一覧を見る", addresses_path %>
  <h2>注文履歴</h2>
     <%= link_to "一覧を見る", orders_path %>
</div>