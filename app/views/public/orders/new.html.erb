<% if @order.errors.any? %>
  <%= @order.errors.count %>件のエラーが発生しました
    <% @order.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
<% end %>


<h4>注文情報入力</h4>

<%= form_with model: @order, url:orders_confirm_path, local:true do |f| %>
  <h1>支払方法</h1>
  <%= f.radio_button :payment_method, :"credit_card", {} %>
  <%= f.label :payment_method, "クレジットカード", {value: :"0"} %>
  <%= f.radio_button :payment_method, :"transfer", {:checked => true} %>
  <%= f.label :payment_method, "銀行振込", {value: :"1"} %>

  <h1>お届け先</h1>
  <%= f.radio_button :select_address, :"0", {:checked => true} %>ご自身の住所
  <div>〒<%= @customer.postal_code %> <%= @customer.address %></div>
  <%= @customer.last_name %><%= @customer.first_name %>
  <%= f.radio_button :select_address, :"1", {} %>登録済み住所から選択
  <%= f.collection_select :address_id, Address.all, :id, :address, include_blank: "選択して下さい" %>
  <%= f.radio_button :select_address, :"2", {} %>新しいお届け先

  <label>郵便番号(ハイフンなし)</label>
  <%= f.text_field :postal_code , class:"form-control address_postcode", placeholder: "0000000" %>
  <label>住所</label>
  <%= f.text_field :address , class:"form-control address_address", placeholder: "東京都渋谷区代々木神園町0-0" %>
  <label>宛名</label>
  <%= f.text_field :receiver_name , class:"form-control address_name", placeholder: "ケーキ太郎" %>
  <%= f.submit "確認画面に進む", class: "btn btn-primary" %>

<% end %>